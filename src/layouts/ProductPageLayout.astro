---
import Footer from '../components/Footer.astro'
import Navbar from '../components/Navbar.astro'
import '../styles/global.css'

interface Props {
  title: string
  description: string
  product: 'tracehound' | 'argos' | 'muninn' | 'huginn' | 'talos'
  status: 'active' | 'development' | 'coming-soon'
  color: string
}

const { title, description, product, status, color } = Astro.props

const statusConfig = {
  active: { label: 'Now Available', class: 'bg-green-500/10 border-green-500/30 text-green-400' },
  development: {
    label: 'In Development',
    class: 'bg-yellow-500/10 border-yellow-500/30 text-yellow-400',
  },
  'coming-soon': {
    label: 'Coming Q2 2026',
    class: 'bg-purple-500/10 border-purple-500/30 text-purple-400',
  },
}

const statusInfo = statusConfig[status]
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style define:vars={{ accentColor: color }}>
      .accent-glow {
        box-shadow: 0 0 60px color-mix(in srgb, var(--accentColor) 20%, transparent);
      }
      .accent-border {
        border-color: color-mix(in srgb, var(--accentColor) 30%, transparent);
      }
      .accent-bg {
        background-color: color-mix(in srgb, var(--accentColor) 10%, transparent);
      }
      .accent-text {
        color: var(--accentColor);
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
