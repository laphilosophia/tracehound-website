---
import { getCollection } from 'astro:content'
import Footer from '../../components/Footer.astro'
import Navbar from '../../components/Navbar.astro'
import Layout from '../../layouts/Layout.astro'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}

const { post } = Astro.props
const { Content } = await post.render()
---

<Layout title={`${post.data.title} | Tracehound`} description={post.data.description}>
  <Navbar />

  <main class="flex-1 pb-32 pt-16">
    <div class="container-custom max-w-4xl">
      <div class="mb-16 pb-8 border-b border-dashed border-surface-highlight">
        <div class="flex items-center gap-2 text-sm text-text-muted mb-6 font-mono">
          <time datetime={post.data.publishDate.toISOString()}>
            {
              post.data.publishDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })
            }
          </time>
          <span class="text-surface-highlight">/</span>
          <span>{post.data.author}</span>
        </div>

        <h1 class="text-3xl md:text-5xl font-bold mb-8 leading-tight tracking-tight">
          {post.data.title}
        </h1>

        <div class="flex gap-2">
          {
            post.data.tags?.map((tag) => (
              <span class="text-xs font-mono text-text-muted bg-surface/50 border border-dashed border-surface-highlight px-2 py-1 rounded-sm">
                #{tag}
              </span>
            ))
          }
        </div>
      </div>

      <article
        class="prose prose-invert prose-lg max-w-none text-text-muted hover:prose-a:text-primary prose-headings:text-white prose-strong:text-white prose-pre:border prose-pre:border-dashed prose-pre:border-surface-highlight prose-pre:rounded-sm"
      >
        <Content />
      </article>

      <div class="mt-24 pt-8 border-t border-dashed border-surface-highlight">
        <a href="/blog" class="text-sm text-text-muted hover:text-white transition-colors font-mono"
          >‚Üê Back to Blog</a
        >
      </div>
    </div>
  </main>

  <Footer />
</Layout>
