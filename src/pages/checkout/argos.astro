---
import { Activity, Eye } from 'lucide-react'
import Footer from '../../components/Footer.astro'
import Navbar from '../../components/Navbar.astro'
import Layout from '../../layouts/Layout.astro'

const benefits = [
  'Event Loop Monitoring',
  'Runtime Integrity Checks',
  'Adaptive Sampling (Burst Mode)',
  'Worker Thread Observer',
  'Ring Buffer Evidence',
  'Low Overhead (< 0.1%)',
]
---

<Layout title="Get Argos | Tracehound" description="Runtime observability for Node.js.">
  <Navbar />

  <main class="flex-1 py-32">
    <div class="container-custom max-w-4xl">
      <div class="grid md:grid-cols-2 gap-16">
        <div>
          <div
            class="inline-flex items-center gap-2 px-3 py-1 bg-purple-500/10 border border-purple-500/30 rounded-full text-xs font-mono text-purple-400 mb-6"
          >
            <Eye className="w-3 h-3" /> The Observer
          </div>
          <h1 class="text-3xl md:text-5xl font-bold mb-6 tracking-tight">
            Get <span class="text-purple-400">Argos</span>
          </h1>
          <p class="text-xl text-text-muted mb-8">
            See what your APM misses. Detect hunger, starvation, and drift in real-time.
          </p>

          <div class="space-y-4 mb-8">
            {
              benefits.map((benefit) => (
                <div class="flex items-start gap-3">
                  <div class="p-1 bg-purple-500/10 rounded-full mt-0.5">
                    <Activity className="w-4 h-4 text-purple-400" />
                  </div>
                  <span class="text-text-muted">{benefit}</span>
                </div>
              ))
            }
          </div>

          <div class="p-6 bg-purple-500/5 border border-dashed border-purple-500/30 rounded-sm">
            <p class="text-sm text-text-muted italic">
              "Argos told us why our workers were dying silently when the event loop was technically
              'free' but actually starving."
            </p>
          </div>
        </div>

        <div
          class="bg-surface/30 border border-surface-highlight rounded-sm p-8 relative overflow-hidden"
        >
          <div class="absolute top-0 right-0 p-4 opacity-10 pointer-events-none">
            <Eye className="w-32 h-32 text-purple-500" />
          </div>

          <h2 class="text-xl font-bold mb-2">Request Access</h2>
          <p class="text-text-muted text-sm mb-6">
            Argos is currently in closed beta. Request access to the standalone observer.
          </p>

          <form class="space-y-4 relative z-10">
            <div>
              <label for="email" class="block text-xs font-mono text-text-muted uppercase mb-2"
                >Work Email</label
              >
              <input
                type="email"
                id="email"
                class="w-full bg-background border border-surface-highlight rounded-sm px-4 py-3 text-white focus:outline-none focus:border-purple-400 transition-colors"
                placeholder="you@company.com"
              />
            </div>

            <div>
              <label for="stack" class="block text-xs font-mono text-text-muted uppercase mb-2"
                >Technology Stack</label
              >
              <input
                type="text"
                id="stack"
                class="w-full bg-background border border-surface-highlight rounded-sm px-4 py-3 text-white focus:outline-none focus:border-purple-400 transition-colors"
                placeholder="e.g. Node.js, Fastify, Kubernetes"
              />
            </div>

            <div class="pt-4">
              <button
                type="button"
                class="w-full bg-purple-600/20 text-purple-300 border border-purple-500/50 font-bold uppercase tracking-wider py-4 rounded-sm hover:bg-purple-600/30 transition-colors"
              >
                Join Waitlist
              </button>
              <p class="text-center text-xs text-text-muted mt-4">
                Includes 14-day free trial when accepted.
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
